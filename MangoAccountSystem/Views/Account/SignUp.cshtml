@model MangoAccountSystem.Models.SignUpInputModel
@{
    ViewData["Title"] = "Mango SignUp";
}
<div style="max-width:690px;margin:60px auto 0px auto;">
    <h2>Sign Up</h2>
    <form action="/account/signup" method="post">
		@Html.AntiForgeryToken()
        <div class="form-group">
            <label for="exampleInputEmail1">UserName</label>
            <input type="text" class="form-control" name="userName" value="@Model?.UserName">
			<span asp-validation-for="UserName" class="text-danger"></span>
        </div>
		<div class="form-group">
			<label for="exampleInputEmail1">Email address</label>
			<input type="email" class="form-control" name="email" aria-describedby="emailHelp" value="@Model?.Email">
			<span asp-validation-for="Email" class="text-danger"></span>
		</div>
		<div class="form-group">
			<label for="exampleInputPassword1">Password</label>
			<input type="password" class="form-control" name="password">
			<span asp-validation-for="Password" class="text-danger"></span>
		</div>
        <div class="form-group">
            <label for="exampleInputPassword1">Password Confirm</label>
            <input type="password" class="form-control" name="passwordConfirm">
			<span asp-validation-for="PasswordConfirm" class="text-danger"></span>
        </div>
		<div class="form-group form-check">
			<input type="checkbox" class="form-check-input" name="isAgree" value="true">
			<label class="form-check-label" for="exampleCheck1">同意隐私协议</label>
			<span asp-validation-for="IsAgree" class="text-danger"></span>
		</div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
    </form>
</div>
