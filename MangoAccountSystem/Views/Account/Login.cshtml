@model MangoAccountSystem.Models.LoginViewModels
@{
    ViewData["Title"] = "Mango Login";
}
<div class="row">
    <div class="col-sm-8">     
    </div>
    <div class="col-sm-4">
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem; margin-top:60px;margin-left:auto;margin-right:auto;">
            <div class="card-header">Mango User</div>
            <div class="card-body">
                <form action="/account/login" method="post">
                    <input type="hidden" value="@Model.ReturnUrl" name="returnurl"/>
                    <div class="form-group">
                        <label for="exampleInputEmail1">UserName</label>
                        <input type="text" class="form-control" name="username" value="@Model.UserName">
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" name="password">
                        @{
                            if (Model.IsError)
                            {
                                <small class="form-text" style="color:red;">@Model.ValidationErrors</small>
                            }
                        }
                    </div>
                    <button type="submit" style="display:inline;" class="btn btn-success">Login</button>
                    <button type="button" style="display:inline; margin-left:10px;" class="btn btn-outline-success" onclick="window.location.href = '/account/signup'">Sign Up</button>                 
                </form>
            </div>
        </div>
    </div>
</div>